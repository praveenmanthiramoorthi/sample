//1a
import numpy as np
arr=np.array([[1,2,3],[4,5,6]])
print("Array type:",type(arr)) #type of numpy object
print("Dimension",arr.ndim) #display the dimensions
print("Shape of array",arr.shape) #returns the no.of rows and cols
print("Array Size",arr.size) #returns the total no.of values
print("type of elements in the array", arr.dtype) #returns the type of the elements

